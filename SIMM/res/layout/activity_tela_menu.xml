<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7fffd4"
    tools:context=".TelaMenu" >
    
	<TextView
         android:id="@+id/textView1"
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/menu" />
	
	<LinearLayout
	   
	    android:layout_width="match_parent"
	    android:layout_height="260dp"
	    android:background="@color/color_name_2"
	    android:orientation="vertical" >
	
   		<TextView
   		    android:id="@+id/textView_empty"
   		    android:layout_width="match_parent"
   		    android:layout_height="wrap_content"
   		    android:layout_weight="0.42"
   		    android:gravity="center"
   		    android:text="Opções de Menu:" />
   		
	</LinearLayout>
 
       <LinearLayout 
            android:background="#90ee90"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="horizontal">
       		<TableLayout 
            	android:layout_marginTop="20dp"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:stretchColumns="1" >

        		<TableRow android:gravity="center_horizontal" >
            		
            		<ImageView
	                    android:id="@+id/imageView2_salvar"
	                    android:layout_width="match_parent"
                		android:layout_height="wrap_content"
	                    android:src="@drawable/salvar" />
                	<ImageView
	                    android:id="@+id/imageView1_novo"
	                    android:layout_width="match_parent"
                		android:layout_height="wrap_content"
	                    android:src="@drawable/novo" />

                	<ImageView
                	    android:id="@+id/imageView3_sair"
                	    android:layout_width="match_parent"
                	    android:layout_height="wrap_content"
                	    android:src="@drawable/sair" />
            		
        		</TableRow>
    		</TableLayout>
    	</LinearLayout>
</LinearLayout>